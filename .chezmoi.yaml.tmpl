encryption: gpg
gpg:
  symmetric: true
diff:
  exclude:
  - scripts
  pager: diff-so-fancy
git:
  autoCommit: true
  autoPush: true
merge:
  command: meld
data:
  update:
    interval: 2days
  editor: /usr/sbin/nvim
  shell: zsh
  zsh:
    prompt: p10k # possible values starship, p10k
  xdg:
    config: {{ joinPath .chezmoi.homeDir ".config" }}
    cache: {{ joinPath .chezmoi.homeDir ".cache" }}
    data: {{ joinPath .chezmoi.homeDir ".local/share" }}
{{- if (contains "nuance" .chezmoi.fqdnHostname) }}
  tools:
    - azcli
  kubectl:
    - allctx
    - ctx
    - debug-shell
    - deprecations
    - doctor
    - emit-event
    - explore
    - fuzzy
    - kurt
    - modify-secret
    - multiforward
    - ns
    - pod-lens
    - restart
    - roll
    - who-can
{{ end }}
  podman:
{{- if (contains "pc" .chezmoi.fqdnHostname) }}
  - torrent
  - webDav
  - jellyfin
  - shoko
{{ end }}
  lastupdated:
    gopkgs: 0
    kubectl: 0
    krewplugins: 0
